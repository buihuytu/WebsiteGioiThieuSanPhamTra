                        <input type="text" class="form-control" id="emailAddress" placeholder="Email" name="email" required>
                    </div>
                    <div class="input">
                        <input type="text" class="form-control" id="phoneNumber" placeholder="Số điện thoại" name="phoneNumber" required>
                    </div>
                    <div class="input">
                        <input type="text" class="form-control" id="content" placeholder="Nội dung" name="detail" required>
                        <!-- <textarea class="form-control" id="content" rows="1" placeholder="Nội dung"></textarea> -->
                    </div>

                    <div class="btn-submit">
                        <button class="t-btn" type="submit" id="sendContact">Gửi</button>
                    </div>
                </form>
            </div>
