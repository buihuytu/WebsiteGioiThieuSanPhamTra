@model WebBanTra.Models.tblProduct
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết sản phẩm</title>
    <link rel="icon" type="image/x-icon" href="~/Public/Assets/icon/icon-tea-main.ico">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <!-- Slick slider -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" integrity="sha512-17EgCFERpgZKcm0j0fEq1YCJuyAWdz9KUtv1EjVuaOz8pDnh/0nZxmU6BBXwaaxqoi9PQXnRWqlcDB027hgv9A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" integrity="sha512-yHknP1/AwR+yx26cB1y0cjvQUMvEa2PFzt1c9LlS4pRQ5NOTZFWbhBig+X9G9eYW/8m0/4OXNx8pxJ6z57x0dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <!-- Css -->
    <link rel="stylesheet" href="~/Public/Css/common.css">
    <link rel="stylesheet" href="~/Public/Css/product-detail.css">
</head>
<body>
    <header class="header">
        <div class="container ">
            <div class="d-flex justify-content-between">
                <div class="header-logo">
                    <a href="@Url.Action("Index", "Home")"><img src="~/Public/Assets/Pictures/trang-chu/logophongtra.png" alt=""></a>
                </div>
                <div class="header-nav">
                    <ul class="row">
                        <li><a href="@Url.Action("Index", "Home")">TRANG CHỦ</a></li>
                        <li><a href="@Url.Action("Introduction", "Home")">GIỚI THIỆU</a></li>
                        <li><a href="@Url.Action("Product", "Home")">SẢN PHẨM</a></li>
                        <li><a href="@Url.Action("News", "Home")">TIN TỨC</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">LIÊN HỆ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <section class="bg-detail">
        <div class="container">
            <!-- Nav Product -->
            <div class="nav">
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a href="@Url.Action("Product", "Home")">Sản phẩm</a>
                        <i class="fa fa-angle-right"></i>
                    </li>
                    <li><a href="@Url.Action("ProductDetail", "Home", new {@ViewBag.Slug})">Chi tiết sản phẩm</a></li>
                </ul>
            </div>

            <!-- Product detail -->
            <div class="product-detail">
                <div class="row">
                    <div class="col-md-7 col-sm-12">
                        <div class="slider-detail">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="slider-nav">
                                        @foreach (var i in Model.tblProductImages)
                                        {
                                            <div>
                                                <img src="~/Public/Admin/Pictures/product-images/@i.Name" alt="" class="w-75">
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="slider-for">
                                        @foreach (var i in Model.tblProductImages)
                                        {
                                            <div>
                                                <img src="~/Public/Admin/Pictures/product-images/@i.Name" alt="" class="w-100">
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-12">
                        <div class="detail-content">
                            <h2>@Model.Name</h2>
                            <div class="rating d-flex">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <p>71 đánh giá</p>
                            </div>
                            <div class="d-flex justify-content-start">
                                <p class="detail-price">@String.Format("{0:0,0}", Model.Price)<small>VND</small><span>/100gr</span></p>
                            </div>
                            <p class="safety-rating">
                                Sản phẩm đạt chuẩn vệ sinh an toàn thực phẩm
                            </p>
                            <div class="detail-description">
                                @*<p>
                                    Trà Shan Tuyết (Chè Shan Tuyết) hay còn gọi là trà tuyết.
                                    Đây là loại trà đặc sản của các đồng bào tộc người Tày, Giao,
                                    Mông và là đặc sản của các tỉnh như Hà Giang, Điện Biên, Lào Cai.
                                </p>
                                <p>
                                    Đặc điểm của trà Shan Tuyetes là búp trà (casnhh trà) rất to và
                                    màu trắng, dưới cánh trà phủ 1 lớp lông tơ mịn màu trắng.
                                </p>
                                <p>
                                    Cây trà Shan Tuyết cổ thụ rất lớn, có khi vài người lớn vòng tay ôm.
                                    Mọc ở trên núi cao hơn 1200m, quanh năm mây mù và lạnh. Sự chênh lệch
                                    nhiệt độ giữa ngày và đêm là rất lớn, chính bởi có điều kiện tự nhiên
                                    thú vị như vậy nên đó là nét độc đáo tạo ra một hương vị trà shan
                                    tuyết cổ thụ thơm ngon.
                                </p>*@
                                @Html.Raw(Model.Description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Instructions -->
            <div class="instruction">
                <div class="row">
                    <div class="col-md-5 col-sm-6">
                        <h2 class="h2-detail">Hướng dẫn pha <br /> @Model.Name</h2>
                        <div class="instruction-item d-flex">
                            <i class="fa-solid fa-droplet fa-flip-horizontal"></i>
                            <p>
                                Đổ vào ấm 150 - 200ml, <br>
                                nước sôi nhiệt độ 85°C
                            </p>
                        </div>
                        <div class="instruction-item d-flex">
                            <i class="fa-solid fa-spoon"></i>
                            <p>
                                1 - 2 nắm trà, khoảng 20 - 30 gram
                            </p>
                        </div>
                        <div class="instruction-item d-flex">
                            <i class="fa-regular fa-clock"></i>
                            <p>
                                Để trà 4 - 6 phút
                            </p>
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-6">
                        <img src="~/Public/Assets/Pictures/chitietsanpham/phatra.jpg" alt="" class="w-100">
                    </div>
                </div>
            </div>

            <!-- Related Product -->
            
            <div class="related-product">
                <h2 class="h2-detail">Sản phẩm liên quan</h2>
                <div class="related-slider">
                    @{Random rnd = new Random();}
                    @foreach (var p in ViewBag.listOther)
                    {
                        int star = (rnd.Next(100));
                        <div class="product-item">
                            <div class="product-rate d-flex">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>

                                <p>(@star)</p>
                            </div>
                            <div class="new-product">
                                <p>NEW</p>
                            </div>
                            <img src="~/Public/Admin/Pictures/products/@p.Image" alt="" class="w-100">
                            <h5><a href="@Url.Action("ProductDetail", "Home", new {@p.Slug})">@p.Name</a></h5>
                            <div class="d-flex justify-content-center">
                                <p class="product-price">@String.Format("{0:0,0}", p.Price)<small>VND</small><span>/100gr</span></p>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-6">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")"><img src="~/Public/Assets/Pictures/trang-chu/logophongtra.png" alt=""></a></li>
                        <li><a href="#">7999-999-999</a></li>
                        <li><a href="#">trasenbachdiep@gmail.com</a></li>
                        <li><a href="#">số 12, Quảng An, Hồ Tây, Hà Nội</a></li>
                    </ul>
                </div>
                <div class="col-md-4 col-sm-6">
                    <ul>
                        <li><h4>VỀ CHÚNG TÔI</h4></li>
                        <li><a href="@Url.Action("Introduction", "Home")">Giới thiệu</a></li>
                        <li><a href="@Url.Action("Product", "Home")">Sản phẩm</a></li>
                        <li><a href="@Url.Action("News", "Home")">Tin tức</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6">
                    <ul>
                        <li><h4>LIÊN HỆ</h4></li>
                        <li>
                            <a href="#"><i class="fa-brands fa-youtube"></i></a>
                            <a href="#"><i class="fa-brands fa-instagram"></i></a>
                            <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                        </li>
                        <li>
                            Copyright © 2010-2020 <br />
                            Tra Sen Bach Diep. All right reserved.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js" integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/Scripts/mySlick.js"></script>
</body>
</html>